{
  "compileOnSave": true,
  "compilerOptions": {
    //"watch": true, //not sure why this throws errors. 
    "module": "system",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true
    //,"outDir": "wwwroot/js/apps/" //if you don't want to use gulp/grunt to uglify and move packages.
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
